<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Sellers</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for additional styling -->
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }
        .containers {
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            padding-bottom: 0px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .btn-actions {
            white-space: nowrap;
        }
        .table img {
            width: 50px;
            height: auto;
        }
        /* Ensure responsiveness */
        @media (max-width: 768px) {
            .containers {
                padding: 10px;
            }
            table thead {
                display: none;
            }
            table tbody tr {
                display: block;
                margin-bottom: 10px;
            }
            table tbody td {
                display: block;
                text-align: right;
                border-bottom: 1px solid #ddd;
                position: relative;
                padding-left: 50%;
                white-space: nowrap;
            }
            table tbody td:before {
                content: attr(data-label);
                position: absolute;
                left: 0;
                width: 50%;
                padding-left: 10px;
                font-weight: bold;
                text-align: left;
                white-space: nowrap;
            }
            .btn-actions {
                justify-content: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="containers">
        <h2>Manage Users</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Image</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                    <tr>
                        <td data-label="No"><%= index + 1 %></td>
                        <td data-label="Image"><img src="<%= user.image %>" alt="User Image"></td>
                        <td data-label="Username"><%= user.username %></td>
                        <td data-label="Email"><%= user.email %></td>
                        <td data-label="Actions" class="btn-actions">
                            <% if (user.blocked) { %>
                                <button class="btn btn-warning btn-sm unblock-btn" data-user-id="<%= user._id %>">Unblock</button>
                            <% } else { %>
                                <button class="btn btn-warning btn-sm block-btn" data-user-id="<%= user._id %>">Block</button>
                            <% } %>
                            <button class="btn btn-danger btn-sm delete-btn" data-user-id="<%= user._id %>">Delete</button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Script for handling block/unblock actions -->
    <script src="/js/admin.js"></script>
</body>
</html>
